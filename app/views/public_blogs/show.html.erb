<div class="container">
    <div class="jumbotron text-center">
            <%= link_to  "Go Back", category_path(params[:category_id]), class: 'btn btn-primary' %>
        <h1 class="display-3 text-center"><%= @blog.title %></h1>
        <p class="lead">
            <%= @blog.body %>
        </p>
        <% @blog.comments.each do |c| %>
            <h5 style="margin-bottom:15px;" class="text-warning"><%= c.body %> <span class="text-dark">by: <%= c.user.f_name %> <%= c.user.l_name %></span> </h5>
        <% end %>
        <div class="btn-div">
            <%= link_to  "Leave Comment", new_category_public_blog_comment_path(params[:category_id], @blog.id), class: 'btn btn-warning' %>
        </div>
    </div>
</div>





