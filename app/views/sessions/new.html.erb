<div class="container">
    <div class="jumbotron">
        <h1 class="display-3 text-center">Log In</h1>
        <%= form_tag sessions_path do %>
            <%= label_tag :email, 'Email', class: '' %>
            <%= text_field_tag :email, params[:email], class: 'form-control' %>
            <%= label_tag :password, 'Password', class: '' %>
            <%= password_field_tag :password, nil, class: 'form-control' %>
            <div class="btn-div text-center">
                <%= submit_tag 'Log in', class: 'btn btn-success btn-lg' %>
                <%= link_to "Don't have an account?", new_user_path, class: 'btn btn-info btn-lg' %>
            </div>
        <% end %>
    </div>
</div>

