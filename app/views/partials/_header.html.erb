<header class="container-fluid bg-dark">
    <div class="row">
        <div class="col-md-4 align-middle">
            <% if logged_in? %>
                <%= render 'partials/toggleBtn' %>
            <% end %>
            
        </div>
        <div class="col-md-4 text-center">
            <h3 class="text-white"><%= icon('cloud') %> <a href="/users" class="headingH1">BlogIT</a> <%= icon('pencil') %></h3>
        </div>
        <div class="col-md-4 align-middle text-right">
            <% if !logged_in? %>
                <%= link_to  "Sign Up", new_user_path, class: 'header-link fa fa-user' %>
                <%= link_to  "Log In", new_session_path, class: 'header-link fa fa-sign-in' %>
            <% else %>
                <%= link_to  "Log Out", '/logout', method: 'delete', class: 'header-link fa fa-sign-out' %>
            <% end %>
        </div>
    </div>
</header>